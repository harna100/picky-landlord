<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">


    <CheckBox
        android:id="@+id/cb_cellSolved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_cellTitle"
        tools:text="Text in the cell, Typing a really long title to see how it fits on screen"
        android:maxLines="1"
        android:textSize="25sp"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/cb_cellSolved"
        android:layout_toStartOf="@id/cb_cellSolved"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>